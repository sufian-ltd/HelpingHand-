<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/reg2"
    tools:context=".HomeServiceRegisterActivity">

    <TextView
        android:id="@+id/tvJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#Fff"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:padding="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Welcome Please Follow The Rules...!!!"/>
    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center" />
    <EditText
        android:id="@+id/etName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/et"
        android:fontFamily="serif"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="Name:"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/et"
        android:fontFamily="serif"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:hint="Email:"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/et"
        android:fontFamily="serif"
        android:gravity="center"
        android:inputType="textPassword"
        android:hint="Password(8-15 char):"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/etContact"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/et"
        android:fontFamily="serif"
        android:gravity="center"
        android:inputType="phone"
        android:hint="Contact:"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/etNID"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/et"
        android:fontFamily="serif"
        android:gravity="center"
        android:inputType="number"
        android:hint="NID/Smart Card ID:"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/etAddress"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:background="@drawable/et"
        android:fontFamily="serif"
        android:gravity="center"
        android:inputType="text"
        android:hint="Address(20-50 char):"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="16sp"/>
    <Spinner
        android:id="@+id/spnQues"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/et"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#000">

    </Spinner>
    <EditText
        android:id="@+id/etQues"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/et"
        android:fontFamily="serif"
        android:hint="Your Answer :"
        android:textColor="#000"
        android:gravity="center"
        android:inputType="text"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="#fff"
        android:background="@drawable/btn10"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:onClick="registerClick"
        android:text="Register"/>

</LinearLayout>