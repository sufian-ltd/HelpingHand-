<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/reg2"
    android:gravity="center"
    tools:context=".LoginActivity">

        <TextView
            android:id="@+id/tvJoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:padding="15dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Welcome Please Login or Skip it..."/>
        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="serif"
                android:textColor="#000"
                android:text="Enter Username"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/et"
                android:fontFamily="serif"
                android:gravity="center"
                android:inputType="textPersonName"
                android:hint="Username:"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16sp"/>
        </LinearLayout>.

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="serif"
                android:textColor="#000"
                android:text="Password"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/et"
                android:fontFamily="serif"
                android:gravity="center"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:hint="Password:"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16sp"/>
        </LinearLayout>
        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textColor="#fff"
            android:background="@drawable/btn10"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:onClick="loginClick"
            android:text="Login"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textColor="#fff"
            android:background="@drawable/btn10"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:onClick="skipClick"
            android:text="Skip"/>

        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff2830"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="10dp"
            android:gravity="center"
            android:text="Forgot Password?"/>

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#Fff"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:gravity="center"
            android:text="Not Join In This Community Yet?Click Here To Join"/>
</LinearLayout>