    <Spinner
        android:id="@+id/spnExperience"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="16sp"
        android:background="@drawable/et"
        android:gravity="center">
    </Spinner>

    <EditText
        android:id="@+id/etDetail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/et"
        android:fontFamily="serif"
        android:gravity="center"
        android:inputType="text"
        android:hint="Work Details :"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/etCharge"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/et"
        android:fontFamily="serif"
        android:gravity="center"
        android:inputType="number"
        android:hint="Service Charge :"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="16sp"/>
    <Spinner
        android:id="@+id/spnSubDiv"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="16sp"
        android:background="@drawable/et"
        android:gravity="center">

    </Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="#fff"
        android:background="@drawable/btn10"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:onClick="shareLocation"
        android:text="Service Point location"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textColor="#fff"
        android:background="@drawable/btn10"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:onClick="savePost"
        android:textStyle="bold"
        android:text="Save Post"/>

</LinearLayout>